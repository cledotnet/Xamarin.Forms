<?xml version="1.0" encoding="utf-8" ?>
<BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiabetesLog.InsulinDosePage">
	<Label Text="Record an insulin dose." VerticalOptions="Center" HorizontalOptions="Center" />

  <BasePage.ToolbarItems>
    <ToolbarItem Text="meter" Order="Primary" x:Name="GlucoseCheckItem">
      <ToolbarItem.Icon>
        <OnPlatform x:TypeArguments="FileImageSource" iOS="Diabetes-25.png" Android="Diabetes.png" WinPhone="Images/edit.png" />
      </ToolbarItem.Icon>
    </ToolbarItem>
    <ToolbarItem Text="insulin" Order="Primary" x:Name="InsulinDoseItem">
      <ToolbarItem.Icon>
        <OnPlatform x:TypeArguments="FileImageSource" iOS="Syringe Filled-25.png" Android="Syringe.png" WinPhone="Images/search.png" />
      </ToolbarItem.Icon>
    </ToolbarItem>
    <ToolbarItem Text="meal" Order="Primary" x:Name="MealItem">
      <ToolbarItem.Icon>
        <OnPlatform x:TypeArguments="FileImageSource" iOS="Meal Filled-25.png" Android="Meal.png" WinPhone="Images/refresh.png" />
      </ToolbarItem.Icon>
    </ToolbarItem>
    <ToolbarItem Text="explore" Order="Secondary" />
    <ToolbarItem Text="discover" Order="Secondary" />
    <ToolbarItem Text="evolve" Order="Secondary" />
  </BasePage.ToolbarItems>

</BasePage>